<h1>בקשות לשבוע</h1>

<table id="weeks" class="table datatable">
  <thead>
    <tr>
      <th>שם</th>
      <th>תדירות</th>
      <th>כמה שעות</th>
      <th>זמן ביום</th>
      <th>ימים מועדפים</th>
      <th>ימים לא אפשריים</th>
      <th>  </th>
      <th>  </th>
      <th>  </th>
      <th>  </th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr>
        <td><%= week.name %></td>
        <td><%= week.frequency %></td>
        <td><%= week.houers %></td>
        <td><%= week.tomezon %></td>
        <td>
          <%= "<span class='label label-info'>א'</span>".html_safe if week.day_a == 1 %>
          <%= "<span class='label label-info'>ב'</span>".html_safe if week.day_b == 1 %>
          <%= "<span class='label label-info'>ג'</span>".html_safe if week.day_c == 1 %>
          <%= "<span class='label label-info'>ד'</span>".html_safe if week.day_d == 1 %>
          <%= "<span class='label label-info'>ה'</span>".html_safe if week.day_e == 1 %>
          <%= "<span class='label label-info'>ו'</span>".html_safe if week.day_f == 1 %>
          <%= "<span class='label label-info'>שבת</span>".html_safe if week.day_s == 1 %>
        </td>
        <td>
          <%= "<span class='label label-warning'>א'</span>".html_safe if week.day_a == 2 %>
          <%= "<span class='label label-warning'>ב'</span>".html_safe if week.day_b == 2 %>
          <%= "<span class='label label-warning'>ג'</span>".html_safe if week.day_c == 2 %>
          <%= "<span class='label label-warning'>ד'</span>".html_safe if week.day_d == 2 %>
          <%= "<span class='label label-warning'>ה'</span>".html_safe if week.day_e == 2 %>
          <%= "<span class='label label-warning'>ו'</span>".html_safe if week.day_f == 2 %>
          <%= "<span class='label label-warning'>שבת</span>".html_safe if week.day_s == 2 %>
        </td>
        <td>
          <% week.circuls.each do |circul| %>
            <%= content_tag(:span, circul.name, class: "label label-primary")  %>
          <% end %>
        </td>
        <td><%= link_to 'הצגה', week, class: "btn btn-default" %></td>
        <td><%= link_to 'עריכה', edit_week_path(week), class: "btn btn-default" %></td>
        <td><%= link_to 'מחיקה', week, method: :delete, data: { confirm: 'למחוק?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'אירוע חדש', new_week_path %>
<div id='calendar'></div>
