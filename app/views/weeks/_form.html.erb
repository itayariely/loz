<%= simple_form_for(@week) do |f| %>

  <div class="field">
    <%= f.input :name, label: "שם:" %>
  </div>

  <div class="field">
    <%= f.input :frequency, collection: Week.frequencies.keys, label: "תדירות:" %>
  </div>

  <div class="field">
    <%= f.input :houers, label: "כמה שעות דרושות:" %>
  </div>

  <div class="field">
    <%= f.input :tomezon, collection: Week.tomezons.keys, label: "מתי במהלך היום:" %>
  </div>

  <div class="field">
    יום א':
    <%= f.collection_radio_buttons :day_a, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום ב':
    <%= f.collection_radio_buttons :day_b, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום ג':
    <%= f.collection_radio_buttons :day_c, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום ד':
    <%= f.collection_radio_buttons :day_d, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום ה':
    <%= f.collection_radio_buttons :day_e, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום ו':
    <%= f.collection_radio_buttons :day_f, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    יום שבת':
    <%= f.collection_radio_buttons :day_s, [[0, 'נטרלי'], [1, 'מתאים'] ,[2, 'לא מתאים']], :first, :last %>
  </div>
  <div class="field">
    <%= f.input :notes, label: "הערות:" %>
  </div>

  <%= f.label "מיועד למעגלים:" %><br>
  <div class="row">
    <table class="table">
      <tr>
          <% i = 1 %>
          <%= f.collection_check_boxes :circul_ids, Circul.all, :id, :initial_name do |ff| %>
                  <%# f.collection_check_boxes(:circul_ids, Circul.all, :id, :initial_name) do |ff| %>
            <% if i == 8 %>
              <%= "</tr><tr>".html_safe %>
              <% i = 1 %>
            <% end %>
            <%= ff.label(class: "check_box") do %>
              <td>
                <%= ff.check_box(class: "check_box") %>
                <%= ff.object.name %>
              </td>
            <% end %>
            <% i = i+1 %>
          <% end %>

      </tr>
    </table>
  </div>


  <%= f.label "מיועד לחברות וחברים:" %><br>
  <div class="row">
    <table class="table">
      <tr>
          <% i = 1 %>
          <%= f.collection_check_boxes :friend_ids, Friend.all, :id, :name_with_initial do |ff| %>
                  <%# f.collection_check_boxes(:circul_ids, Circul.all, :id, :initial_name) do |ff| %>
            <% if i == 8 %>
              <%= "</tr><tr>".html_safe %>
              <% i = 1 %>
            <% end %>
            <%= ff.label(class: "check_box") do %>
              <td>
                <%= ff.check_box(class: "check_box") %>
                <%= ff.object.name_with_initial %>
              </td>
            <% end %>
            <% i = i+1 %>
          <% end %>

      </tr>
    </table>
  </div>



  <div class="actions">
    <%= f.submit "שמירה" %>
  </div>
<% end %>
