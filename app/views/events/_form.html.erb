<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "שם:" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "תאריך התחלה:" %><br>
    <%= f.text_field :start_date, 'data-provide'=>'datepicker' %>
  </div>
  <div class="field">
    <%= f.label "תאריך סיום:" %><br>
    <%= f.text_field :end_date, 'data-provide'=>'datepicker' %>
  </div>
  <div class="field">
    <%= f.label "הערות:" %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
    <%= f.label "כמה ימים יהיה:" %><br>
    <%= f.number_field :days %>
  </div>
  <div class="field">
    <%= f.label "כמה לילות יהיה:" %><br>
    <%= f.number_field :nights %>
  </div>
  <div class="field">
    <%= f.label "מיקום" %><br>
    <%= f.text_field :place %>
  </div>
  <div class="field">
    <%= f.label "מצב" %><br>
    <%= f.number_field :status %>
  </div>
  <div class="field">
    <%= f.label "צבע" %><br>
    <%= f.text_field :color %>
  </div>
  <div class="actions">
    <%= f.submit "שמירה" %>
  </div>
<% end %>
