<h1>רשימת אירועים</h1>

<table class="table">
  <thead>
    <tr>
      <th>שם</th>
      <th>תאריך התחלה</th>
      <th>תאריך סיום</th>
      <!-- <th>הערות</th> -->
      <th>ימים</th>
      <th>לילות</th>
      <!-- <th>מיקום</th> -->
