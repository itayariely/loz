<p id="notice"><%= notice %></p>

<h1>רשימת אירועים</h1>

<table>
  <thead>
    <tr>
      <th>שם</th>
      <th>תאריך התחלה</th>
      <th>תאריך סיום</th>
      <th>הערות</th>
      <th>ימים</th>
      <th>לילות</th>
      <th>מיקום</th>
      <th>מצב</th>
      <th>צבע</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.note %></td>
        <td><%= event.days %></td>
        <td><%= event.nights %></td>
        <td><%= event.place %></td>
        <td><%= event.status %></td>
        <td><%= event.color %></td>
        <td><%= link_to 'הצגה', event %></td>
        <td><%= link_to 'עריכה', edit_event_path(event) %></td>
        <td><%= link_to 'מחיקה', event, method: :delete, data: { confirm: 'למחוק?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'אירוע חדש', new_event_path %>
<%= month_calendar events: @events do |date, events| %>
  <%= date %>

  <% events.each do |event| %>
    <div>
      <%= event.name %>
    </div>
  <% end %>
<% end %>

<%= month_calendar(attribute: :start_date) do |date| %>
  <%= date %>
<% end %>
