      <!-- <th colspan="3"></th> -->
      <th> </th>
      <th> </th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_at %></td>
        <td><%= event.end_at %></td>
        <!-- <td><%# event.note %></td> -->
        <td><%= event.days %></td>
        <td><%= event.nights %></td>
        <!-- <td><%# event.place %></td> -->
        <!-- <td><%# event.status %></td> -->
        <!-- <td><%# event.color %></td> -->
        <td><%= link_to 'הצגה', event, class: "btn btn-default" %></td>
        <td><%= link_to 'עריכה', edit_event_path(event), class: "btn btn-default" %></td>
        <td><%= link_to 'מחיקה', event, method: :delete, data: { confirm: 'למחוק?' }, class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

