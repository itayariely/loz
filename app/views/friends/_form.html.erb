<%= simple_form_for(@friend) do |f| %>

  <div class="field">
    <%= f.input :name, label: "שם" %>

  </div>
  <div class="field">
    <%= f.input :lname, label: "שם משפחה" %>
  </div>
  <div class="field">
    <%= f.input :phone, label: "טלפון" %>
  </div>
  <div class="field">
    <%= f.input :email, label: 'דוא"ל' %>
  </div>
  <div class="field">
    <%= f.input :birth_date, label: "תאריך לידה" %>
  </div>
  <div>


      <strong>מעגלים</strong><br />

        <% i = 1 %>
          <span>
            <div class="row">
              <table class="table">
              <tr>

              <%= f.collection_check_boxes(:circul_ids, Circul.all, :id, :initial_name) do |b| %>
                <% if i == 8 %>
                  <%= "</tr><tr>".html_safe %>
                  <% i = 1 %>
                <% end %>
                <%= b.label(class: "check_box") do %>
                  <td>
                    <%= b.check_box(class: "check_box") %>

                    <%= b.object.name %>
                  </td>
                <% end %>
                <% i = i+1 %>
              <% end %>
            </tr>
            </table>
            </div>
          </span>

  </div>
  <div class="actions">
    <%= f.submit "שלח" %>
  </div>
<% end %>
