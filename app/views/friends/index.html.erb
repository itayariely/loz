<p id="notice"><%= notice %></p>

<h1>רשימת חברים</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lname</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Birth date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.lname %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.email %></td>
        <td><%= friend.birth_date %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path %>

<<%= form_for @friends.first do |f| %>

  <%= f.text_area :name, :class => 'ckeditor' %>
  <%= f.submit %>
<% end %>

