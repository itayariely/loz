              <% if i == 8 %>
                <%= "</tr><tr>".html_safe %>
                <% i = 1 %>
              <% end %>
              <%= b.label(class: "check_box") do %>
                <td>
                  <%= b.check_box(class: "check_box") %>

                  <%= b.object.name %>
                </td>
              <% end %>
              <% i = i+1 %>
            <% end %>
          </tr>
          </table>
          </div>
        </span>
  </div>
  <div class="actions">
    <%= f.submit "שלח" %>
  </div>
