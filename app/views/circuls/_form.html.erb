      <h2><%= pluralize(@circul.errors.count, "error") %> prohibited this circul from being saved:</h2>

      <ul>
      <% @circul.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "שם" %><br>
    <%= f.text_field :name %>
  </div>
